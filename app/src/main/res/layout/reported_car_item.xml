<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/stolenCar"
    android:layoutDirection="ltr"
    android:layout_height="@dimen/_215sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/_3sdp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/appbackground"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/opacity"
                >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:id="@+id/carImg"
                android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="كيا سيراتو"
                        android:fontFamily="@font/heading"
                        android:shadowColor="#7F000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:id="@+id/carModel"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=","
                        android:shadowColor="#7F000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="كيا"
                        android:shadowColor="#7F000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:fontFamily="@font/heading"
                        android:shadowRadius="2"
                        android:id="@+id/brand"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14ssp"
                    android:id="@+id/plate_number"
                    android:textStyle="bold"
                    android:fontFamily="@font/heading"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="7845"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="1">
                <TextView
                    android:layout_weight=".9"
                    android:layout_width="0dp"
                    android:text="@string/address"
                    android:gravity="center|right"
                    android:id="@+id/address"
                    android:fontFamily="@font/phargraphe"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@android:color/black"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_weight=".1"
                    android:src="@drawable/location"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_17sdp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/_10sdp"
                        android:gravity="center|left"
                        android:fontFamily="@font/heading"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="01141012485"
                        android:textSize="@dimen/_12ssp" />
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/time"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_weight=".9"
                        android:layout_width="0dp"
                        android:id="@+id/name"
                        android:text="amr aboelnaga"
                        android:paddingRight="@dimen/_10sdp"
                        android:gravity="center|right"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/heading"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_weight=".1"
                        android:src="@drawable/user"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>