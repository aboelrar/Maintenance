<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:text="Login"
    android:textColor="@android:color/black"
    android:textSize="@dimen/_20ssp"
    android:textStyle="bold"
    android:layout_marginTop="@dimen/_50sdp"
    android:fontFamily="monospace"
    android:gravity="center"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_40sdp"
        android:paddingRight="@dimen/_40sdp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:text="@string/email"
        android:textColor="#c1c1c1"
        android:textSize="@dimen/_12ssp"
        android:paddingLeft="@dimen/_15sdp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_33sdp"
        android:drawableLeft="@drawable/user"
        android:hint="@string/email"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        android:drawablePadding="@dimen/_10sdp"
        android:textSize="@dimen/_11sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:background="@drawable/emailbackground"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="@string/password"
            android:textColor="#c1c1c1"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:paddingLeft="@dimen/_15sdp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:drawableLeft="@drawable/key"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@android:color/black"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="@dimen/_10sdp"
            android:background="@drawable/emailbackground"/>
        <Button
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:layout_height="@dimen/_34sdp"
            android:background="@drawable/loginbackground"/>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textColor="@android:color/black"
            android:text="@string/forgetpassword"/>
        <Button
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:text="@string/facebooklogin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_height="@dimen/_34sdp"
            android:background="@drawable/facebookbackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="@string/creataccount"/>
              <ImageView
                  android:layout_width="@dimen/_55sdp"
                  android:layout_height="@dimen/_1sdp"
                  android:src="@android:color/black"/>

        </LinearLayout>
</LinearLayout>

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_29sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_43sdp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="@dimen/_180sdp"
        android:background="@drawable/loginiconbackground"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/rightarrow" />
    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_29sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_43sdp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="@dimen/_105sdp"
        android:background="@drawable/loginiconbackground"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/facebook" />
</RelativeLayout>