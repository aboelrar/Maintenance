<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context="com.carsyalla.www.cars.reservation_done">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<ImageView
    android:layout_width="@dimen/_50sdp"
    android:layout_height="@dimen/_50sdp"
    android:src="@drawable/checked"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/_10sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/reservationDone"
        android:fontFamily="@font/heading"
        android:textSize="@dimen/_15ssp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مركز المصطفى لخدمه السيارات المستعمله"
        android:textSize="@dimen/_13ssp"
        android:gravity="center"
        android:fontFamily="@font/phargraphe"
        android:id="@+id/centerName"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="@dimen/_50sdp"
            android:paddingLeft="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/phargraphe"
                android:text="19/11/20000"
                android:id="@+id/date"
                android:textSize="@dimen/_12ssp"
                android:gravity="right|center"
                android:layout_marginRight="@dimen/_10sdp"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/time"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="@dimen/_50sdp"
            android:paddingLeft="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/phargraphe"
                android:text="19/11/20000"
                android:id="@+id/phone"
                android:textSize="@dimen/_12ssp"
                android:gravity="right|center"
                android:layout_marginRight="@dimen/_10sdp"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/smartphone"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="@dimen/_50sdp"
            android:paddingLeft="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="نيسان سنى"
                android:id="@+id/model"
                android:fontFamily="@font/phargraphe"
                android:textSize="@dimen/_12ssp"
                android:gravity="right|center"
                android:layout_marginRight="@dimen/_10sdp"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/cariconreservation"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="@dimen/_50sdp"
            android:paddingLeft="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/_20sdp"
             android:gravity="center|right"
             android:layout_marginRight="@dimen/_10sdp"
             android:orientation="horizontal">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:textSize="@dimen/_12ssp"
                 android:text="المعادى"
                 android:id="@+id/city"
                 android:fontFamily="@font/phargraphe"
                 android:textColor="@android:color/black"
                 android:textStyle="bold"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:fontFamily="@font/phargraphe"
                 android:text=","
                 android:layout_marginRight="@dimen/_2sdp"
                 android:layout_marginLeft="@dimen/_2sdp"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:textSize="@dimen/_12ssp"
                 android:id="@+id/gouvernate"
                 android:fontFamily="@font/phargraphe"
                 android:textColor="@android:color/black"
                 android:textStyle="bold"
                 android:text="القاهره"
                 />
         </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/phargraphe"
                    android:id="@+id/address"
                    android:text="عمارات العبور القاهره الكبرى شرق القناه"
                    android:layout_marginRight="@dimen/_10sdp"

                    />
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/placeholdertrans"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewmap"
            android:orientation="vertical">
      <ImageView
          android:layout_width="@dimen/_40sdp"
          android:layout_height="@dimen/_40sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:src="@drawable/mapicon"
          android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="رؤية المركز على الخريطه"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/phargraphe"
            android:textColor="@color/green"
            android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/_12ssp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/heading"
        android:textStyle="bold"
        android:id="@+id/myreservation"
        android:background="@color/blue"
        android:text="@string/myappoienments"
        />
</RelativeLayout>