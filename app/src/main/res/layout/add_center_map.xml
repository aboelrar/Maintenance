<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.carsyalla.admin.mapss.MapsActivity" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/confirm"
        android:text="تاكيد"
        android:fontFamily="@font/heading"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_5sdp"/>
    <ImageView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@android:color/white"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:id="@+id/currentlocation"
        android:layout_marginBottom="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:src="@drawable/currentlocation"
        />

    <ImageView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignBottom="@+id/currentlocation"
        android:layout_centerHorizontal="true"
        android:src="@drawable/marker" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:hint="@string/search"
            android:fontFamily="@font/phargraphe"
            android:id="@+id/search"
            android:gravity="center|right"
            android:paddingRight="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:paddingLeft="@dimen/_5sdp"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="@string/search"
                android:id="@+id/goToSearch"
                android:background="@drawable/searchbutton"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_10sdp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>