<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/appbackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.carsyalla.www.cars.stolen_car_details">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nestedscroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/indicator"
                    >
                </android.support.v4.view.ViewPager>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    app:ci_drawable="@drawable/selected"
                    app:ci_drawable_unselected="@drawable/round"
                    app:ci_width="@dimen/_6sdp"
                    app:ci_height="@dimen/_6sdp"
                    app:ci_margin="@dimen/_5sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/blue"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="@dimen/_30sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:gravity="center|left"
                    android:id="@+id/plate_number"
                    android:textStyle="bold"
                    android:fontFamily="@font/heading"
                    android:layout_gravity="center|left"
                    android:textSize="@dimen/_13ssp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/green"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:fontFamily="@font/heading"
                    android:layout_height="@dimen/_30sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:id="@+id/brand"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/green"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/phargraphe"
                android:gravity="right|center"
                android:id="@+id/notes"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="#ddd"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/heading"
                        android:background="@color/green"
                        android:gravity="center"
                        android:text="تفاصيل السياره"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="right|center"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/phargraphe"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:id="@+id/model1"
                        android:layout_marginRight="@dimen/_3sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:fontFamily="@font/phargraphe"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:text=","/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:textSize="@dimen/_11ssp"
                        android:gravity="center"
                        android:fontFamily="@font/phargraphe"
                        android:id="@+id/brand1"
                        android:textColor="@android:color/black"
                        android:layout_marginRight="@dimen/_6sdp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:text="@string/model"
                    android:fontFamily="@font/heading"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_height="@dimen/_20sdp"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center|right"
                    android:layout_marginRight="@dimen/_3sdp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:paddingRight="@dimen/_10sdp"
                android:gravity="right|center"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/phargraphe"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textColor="@android:color/black"
                    android:id="@+id/modelyear"
                    />
                <TextView
                    android:layout_weight=".5"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/heading"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center|right"
                    android:text="@string/manufacturingyear"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:paddingRight="@dimen/_10sdp"
                android:gravity="right|center"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="@dimen/_20sdp"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/phargraphe"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:paddingLeft="@dimen/_15sdp"
                    android:id="@+id/serial"
                    />
                <TextView
                    android:layout_weight=".5"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/heading"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center|right"
                    android:text="@string/serial"/>
               \
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:paddingRight="@dimen/_10sdp"
                android:gravity="right|center"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_15sdp"
                    android:fontFamily="@font/phargraphe"
                    android:textColor="@android:color/black"
                    android:id="@+id/address"
                   />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/heading"
                    android:gravity="center|right"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:text="@string/address"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>