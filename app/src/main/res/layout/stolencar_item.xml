<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:weightSum="1"
    android:id="@+id/stolenCar"
    android:layout_marginTop="@dimen/_7sdp"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight=".8"
       android:orientation="horizontal"
       android:weightSum="1"
       android:gravity="right"
       >
       <LinearLayout
           android:layout_weight=".2"
           android:layout_width="0dp"
           android:orientation="vertical"
           android:layout_height="match_parent">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="@dimen/_25sdp"
               android:background="@drawable/countrybgstolen"
               android:ellipsize="end"
               android:maxLines="1"
               android:text="الدقى"
               android:paddingRight="@dimen/_2sdp"
               android:paddingLeft="@dimen/_2sdp"
               android:gravity="center"
               android:textColor="@android:color/white"
               android:textSize="@dimen/_11ssp"
               android:id="@+id/address"
               android:fontFamily="@font/phargraphe"
               android:layout_marginTop="@dimen/_15sdp"
               />
       </LinearLayout>

       <LinearLayout
           android:padding="@dimen/_7sdp"
           android:layout_weight=".5"
           android:layout_width="0dp"
           android:orientation="vertical"
           android:weightSum="1"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_weight=".4"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center|right"
               android:layout_height="0dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="سياره"
                   android:textSize="@dimen/_12sdp"
                   android:fontFamily="@font/heading"
                   android:textColor="@color/green"
                   android:gravity="center|right"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:id="@+id/carModel"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="wrap_content"
                   android:text=","
                   android:textSize="@dimen/_15sdp"
                   android:fontFamily="@font/heading"
                   android:textColor="@color/green"
                   android:gravity="center|right"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="wrap_content"
                   android:text="سياره"
                   android:id="@+id/brand"
                   android:textSize="@dimen/_12sdp"
                   android:fontFamily="@font/heading"
                   android:textColor="@color/green"
                   android:gravity="center|right"
                   android:layout_height="wrap_content" />
           </LinearLayout>
          <LinearLayout
              android:layout_weight=".25"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:gravity="right"
              android:layout_height="0dp">

              <TextView
                  android:id="@+id/plate_number"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="right|center"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:text="4588744"
                  android:textSize="@dimen/_9ssp" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text=" : "
                  android:gravity="center"
                  android:textSize="@dimen/_12sdp"
                  android:fontFamily="@font/heading"
                  android:textColor="@color/green"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/plate_number"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:fontFamily="@font/heading"
                    android:textSize="@dimen/_7ssp"
                    />
              <ImageView
                  android:layout_width="@dimen/_20sdp"
                  android:layout_height="match_parent"
                  android:padding="@dimen/_3sdp"
                  android:src="@drawable/licenseplate"
                  android:tint="@android:color/black" />
          </LinearLayout>
           <LinearLayout
               android:layout_weight=".25"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="right"
               android:layout_height="0dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="4588744"
                   android:gravity="right|center"
                   android:id="@+id/serial"
                   android:textSize="@dimen/_9ssp"
                   android:ellipsize="end"
                   android:maxLines="1"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text=" : "
                   android:gravity="center"
                   android:textSize="@dimen/_12sdp"
                   android:fontFamily="@font/heading"
                   android:textColor="@color/green"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="@string/chaseNum"
                   android:gravity="center"
                   android:textColor="@color/green"
                   android:fontFamily="@font/heading"
                   android:textSize="@dimen/_7ssp"
                   />
               <ImageView
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="match_parent"
                   android:tint="@android:color/black"
                   android:padding="@dimen/_4sdp"
                   android:src="@drawable/barcode"
                   />
           </LinearLayout>
       </LinearLayout>
       <ImageView
           android:scaleType="fitXY"
           android:padding="@dimen/_7sdp"
           android:id="@+id/carImg"
           android:layout_weight=".3"
           android:layout_width="0dp"
           android:layout_height="match_parent" />

   </LinearLayout>
    <LinearLayout
        android:layout_weight=".192"
        android:layout_width="match_parent"
        android:background="#F8F9FD"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="right"
        android:layout_height="0dp">
       <LinearLayout
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:gravity="center"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_marginRight="@dimen/_3sdp"
               android:id="@+id/from"
               android:gravity="center"
               android:fontFamily="@font/phargraphe"
               android:textSize="@dimen/_10ssp"
               android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:text="منذ"
            android:gravity="center"
            android:textColor="@color/green"
            android:fontFamily="@font/heading"
            android:textSize="@dimen/_9ssp"
            android:layout_height="match_parent" />
       </LinearLayout>
        <ImageView
            android:layout_weight=".015"
            android:src="#ddd"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_weight=".985"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4588744"
                android:id="@+id/color"
                android:gravity="right|center"
                android:textSize="@dimen/_10ssp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" : "
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/heading"
                android:textColor="@color/green"
                />
        <TextView
            android:layout_width="wrap_content"
            android:text="اللون"
            android:gravity="center"
            android:textColor="@color/green"
            android:fontFamily="@font/heading"
            android:textSize="@dimen/_9ssp"
            android:layout_height="match_parent" />
        </LinearLayout>
        <ImageView
            android:layout_weight=".015"
            android:src="#ddd"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_weight=".985"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4588744"
                android:id="@+id/yearmodel"
                android:gravity="right|center"
                android:textSize="@dimen/_10ssp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" : "
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/heading"
                android:textColor="@color/green"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="سنه الصنع"
                android:textColor="@color/green"
                android:gravity="center"
                android:fontFamily="@font/heading"
                android:textSize="@dimen/_9ssp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
            <ImageView
                android:layout_weight=".008"
                android:layout_width="match_parent"
                android:src="#ddd"
                android:layout_height="0dp" />
        </LinearLayout>
</LinearLayout>