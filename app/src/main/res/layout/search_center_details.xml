<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:background="@drawable/test"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/blue"
            android:text="@string/detailsSearch"
            android:fontFamily="@font/heading"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/carsyalla"
            android:layout_marginTop="@dimen/_20sdp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_17sdp"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/phargraphe"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text="@string/model"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/emailbackground"
                    android:id="@+id/model"
                    android:drawableRight="@drawable/caricon"
                    android:fontFamily="@font/phargraphe"
                    android:gravity="right|center"
                    android:text="@string/model"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    >
                </TextView>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/phargraphe"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text="@string/service"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/emailbackground"
                    android:id="@+id/service"
                    android:fontFamily="@font/phargraphe"
                    android:drawableRight="@drawable/services"
                    android:drawablePadding="@dimen/_10sdp"
                    android:text="@string/service"
                    android:gravity="right|center"
                    android:paddingRight="@dimen/_10sdp"
                    >
                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:fontFamily="@font/phargraphe"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text="@string/city"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/emailbackground"
                    android:id="@+id/city"
                    android:text="@string/city"
                    android:fontFamily="@font/phargraphe"
                    android:gravity="right|center"
                    android:drawableRight="@drawable/cities"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    >
                </TextView>
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/menu"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:textSize="@dimen/_13ssp"
            android:id="@+id/search"
            android:fontFamily="@font/heading"
            android:text="@string/search"
            android:layout_height="@dimen/_30sdp" />
    </LinearLayout>
</LinearLayout>

