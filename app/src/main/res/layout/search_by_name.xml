<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layoutDirection="ltr"
    android:background="@drawable/test"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/blue"
            android:fontFamily="@font/heading"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="@string/searchbyname"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/carsyalla"
            android:layout_marginTop="@dimen/_20sdp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_17sdp"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/phargraphe"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text="بحث"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:hint="@string/searchbyname"
                    android:fontFamily="@font/phargraphe"
                    android:textSize="@dimen/_12ssp"
                    android:drawableRight="@drawable/user"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:gravity="center|right"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:id="@+id/searchByName"
                    android:background="@drawable/emailbackground"
                    >
                </EditText>
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/menu"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/heading"
            android:id="@+id/search"
            android:text="@string/search"
            android:layout_height="@dimen/_30sdp" />
    </LinearLayout>
</LinearLayout>

