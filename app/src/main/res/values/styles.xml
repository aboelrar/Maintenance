<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomCustomTabText" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/heading</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/heading</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/heading</item>
        <item name="tabIndicatorColor">@color/green</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>
</resources>
